@model HotelWifiPortal.Models.ViewModels.PurchaseConfirmViewModel
@{
    Layout = null;
    // Build MikroTik redirect URL if available
    var mikrotikIp = ViewBag.MikrotikIp as string;
    var linkLoginOnly = ViewBag.LinkLoginOnly as string;
    var linkLogin = ViewBag.LinkLogin as string;
    var redirectUrl = "";
    
    // Priority: LinkLoginOnly > LinkLogin > MikroTik IP
    if (!string.IsNullOrEmpty(linkLoginOnly))
    {
        // Use the stored link-login-only URL with credentials
        redirectUrl = linkLoginOnly;
        if (redirectUrl.Contains("?"))
            redirectUrl += $"&username={Uri.EscapeDataString(Model.Guest.RoomNumber)}&password={Uri.EscapeDataString(Model.Guest.ReservationNumber ?? Model.Guest.RoomNumber)}";
        else
            redirectUrl += $"?username={Uri.EscapeDataString(Model.Guest.RoomNumber)}&password={Uri.EscapeDataString(Model.Guest.ReservationNumber ?? Model.Guest.RoomNumber)}";
    }
    else if (!string.IsNullOrEmpty(linkLogin))
    {
        // Use the stored link-login URL with credentials
        redirectUrl = linkLogin;
        if (redirectUrl.Contains("?"))
            redirectUrl += $"&username={Uri.EscapeDataString(Model.Guest.RoomNumber)}&password={Uri.EscapeDataString(Model.Guest.ReservationNumber ?? Model.Guest.RoomNumber)}";
        else
            redirectUrl += $"?username={Uri.EscapeDataString(Model.Guest.RoomNumber)}&password={Uri.EscapeDataString(Model.Guest.ReservationNumber ?? Model.Guest.RoomNumber)}";
    }
    else if (!string.IsNullOrEmpty(mikrotikIp))
    {
        // Redirect to MikroTik login with credentials to re-authenticate
        redirectUrl = $"http://{mikrotikIp}/login?username={Uri.EscapeDataString(Model.Guest.RoomNumber)}&password={Uri.EscapeDataString(Model.Guest.ReservationNumber ?? Model.Guest.RoomNumber)}";
    }
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <title>Purchase Successful</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet" />
    <style>
        body { 
            background: linear-gradient(135deg, #28a745 0%, #20c997 100%); 
            min-height: 100vh; 
            display: flex; 
            align-items: center; 
            justify-content: center;
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
        }
        .success-container { max-width: 500px; margin: 20px; width: 100%; }
        .card { border: none; border-radius: 20px; box-shadow: 0 20px 60px rgba(0,0,0,0.3); }
        .success-icon { font-size: 5rem; color: #28a745; animation: bounceIn 1s; }
        @@keyframes bounceIn { 0% { transform: scale(0); } 50% { transform: scale(1.2); } 100% { transform: scale(1); } }
        .countdown { font-size: 2rem; font-weight: bold; color: #28a745; }
        .btn-connect {
            border-radius: 50px;
            padding: 15px 40px;
            font-size: 1.1rem;
            font-weight: 600;
        }
    </style>
</head>
<body>
    <div class="success-container">
        <div class="card">
            <div class="card-body text-center p-5">
                <i class="bi bi-check-circle-fill success-icon"></i>
                <h2 class="mt-4 mb-3">Purchase Successful!</h2>
                <p class="text-muted mb-4">
                    Your <strong>@Model.Package.Name</strong> package has been activated.
                    <br />
                    <strong>@Model.Package.Currency @Model.Package.Price.ToString("F2")</strong> will be charged to Room @Model.Guest.RoomNumber.
                </p>

                <div class="bg-light rounded p-3 mb-4">
                    <div class="row">
                        <div class="col-6 border-end">
                            <small class="text-muted d-block">Package</small>
                            <strong>@Model.Package.Name</strong>
                        </div>
                        <div class="col-6">
                            <small class="text-muted d-block">Transaction ID</small>
                            <code>@Model.Transaction?.TransactionId.Substring(0, 8)</code>
                        </div>
                    </div>
                </div>

                @if (Model.Transaction?.PostedToPMS == true)
                {
                    <div class="alert alert-success py-2">
                        <i class="bi bi-check-circle me-2"></i>Charge has been posted to your room folio.
                    </div>
                }

                @if (!string.IsNullOrEmpty(redirectUrl))
                {
                    <div class="mt-4">
                        <p class="text-muted mb-2">Connecting to WiFi in...</p>
                        <div class="countdown" id="countdown">5</div>
                        <div class="progress mt-2 mb-4" style="height: 6px;">
                            <div class="progress-bar bg-success" id="progressBar" style="width: 0%"></div>
                        </div>
                    </div>
                    
                    <a href="@redirectUrl" class="btn btn-success btn-connect" id="connectBtn">
                        <i class="bi bi-wifi me-2"></i>Connect Now
                    </a>
                    
                    <p class="text-muted small mt-3">
                        <i class="bi bi-info-circle me-1"></i>
                        You will be redirected automatically
                    </p>
                }
                else
                {
                    <div class="alert alert-info mt-4">
                        <i class="bi bi-info-circle me-2"></i>
                        Your quota has been updated. Please reconnect to WiFi to continue browsing.
                    </div>
                    
                    <a asp-action="Dashboard" class="btn btn-success btn-connect">
                        <i class="bi bi-speedometer2 me-2"></i>Go to Dashboard
                    </a>
                }
            </div>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(redirectUrl))
    {
        <script>
            var countdown = 5;
            var redirectUrl = '@Html.Raw(redirectUrl)';
            var countdownEl = document.getElementById('countdown');
            var progressBar = document.getElementById('progressBar');
            
            var timer = setInterval(function() {
                countdown--;
                if (countdownEl) countdownEl.textContent = countdown;
                if (progressBar) progressBar.style.width = ((5 - countdown) * 20) + '%';
                
                if (countdown <= 0) {
                    clearInterval(timer);
                    window.location.href = redirectUrl;
                }
            }, 1000);
            
            // Also update progress smoothly
            progressBar.style.transition = 'width 1s linear';
        </script>
    }
</body>
</html>
