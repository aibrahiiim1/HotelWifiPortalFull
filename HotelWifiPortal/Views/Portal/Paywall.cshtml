@model HotelWifiPortal.Models.ViewModels.PaywallViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Data Limit Reached</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet" />
    <style>
        body { background: linear-gradient(135deg, #ff6b6b 0%, #ee5a24 100%); min-height: 100vh; font-family: 'Segoe UI', sans-serif; }
        .paywall-container { max-width: 900px; margin: 0 auto; padding: 40px 20px; }
        .paywall-header { text-align: center; color: white; margin-bottom: 40px; }
        .paywall-header .icon { font-size: 5rem; margin-bottom: 20px; animation: bounce 2s infinite; }
        @@keyframes bounce { 0%, 100% { transform: translateY(0); } 50% { transform: translateY(-10px); } }
        .card { border: none; border-radius: 20px; box-shadow: 0 20px 60px rgba(0,0,0,0.3); }
        .package-option { transition: transform 0.3s, box-shadow 0.3s; cursor: pointer; border: 2px solid transparent; }
        .package-option:hover { transform: translateY(-10px); box-shadow: 0 15px 40px rgba(0,0,0,0.2); }
        .package-option.featured { border-color: #28a745; position: relative; }
        .featured-badge { position: absolute; top: -12px; left: 50%; transform: translateX(-50%); background: #28a745; color: white; padding: 5px 20px; border-radius: 20px; font-size: 0.8rem; }
        .price { font-size: 3rem; font-weight: 700; }
        .btn-buy { border-radius: 50px; padding: 15px 40px; font-size: 1.1rem; }
    </style>
</head>
<body>
    <div class="paywall-container">
        <div class="paywall-header">
            <i class="bi bi-exclamation-triangle icon"></i>
            <h1 class="display-5 fw-bold">Data Limit Reached</h1>
            <p class="lead opacity-75">
                You've used @Model.UsedQuotaGB.ToString("F2") GB of your free WiFi allowance.
                <br />Purchase a package to continue browsing.
            </p>
        </div>

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="alert alert-danger mb-4">
                <i class="bi bi-exclamation-circle me-2"></i>@Model.ErrorMessage
            </div>
        }

        <div class="row g-4 justify-content-center">
            @foreach (var package in Model.AvailablePackages)
            {
                <div class="col-md-4">
                    <div class="card package-option h-100 @(package.IsFeatured ? "featured" : "")">
                        @if (package.IsFeatured)
                        {
                            <span class="featured-badge"><i class="bi bi-star-fill me-1"></i>BEST VALUE</span>
                        }
                        <div class="card-body text-center p-4">
                            <div class="mb-3">
                                <i class="bi bi-@(package.Icon ?? "wifi") text-@package.BadgeColor" style="font-size: 3rem;"></i>
                            </div>
                            <h4 class="fw-bold">@package.Name</h4>
                            <p class="text-muted">@package.Description</p>
                            
                            <div class="price text-@package.BadgeColor my-4">
                                <sup class="fs-5">@package.Currency</sup>@package.Price.ToString("F0")
                            </div>

                            <ul class="list-unstyled text-start mb-4">
                                @if (package.PackageType == "TimeBased" && package.DurationDays.HasValue)
                                {
                                    <li><i class="bi bi-check-circle text-success me-2"></i>@package.DurationDays day(s) access</li>
                                }
                                else if (package.PackageType == "RestOfStay")
                                {
                                    <li><i class="bi bi-check-circle text-success me-2"></i>Access until checkout</li>
                                }
                                @if (package.QuotaGB.HasValue)
                                {
                                    <li><i class="bi bi-check-circle text-success me-2"></i>@package.QuotaGB GB data</li>
                                }
                                else
                                {
                                    <li><i class="bi bi-check-circle text-success me-2"></i>Unlimited data</li>
                                }
                                <li><i class="bi bi-check-circle text-success me-2"></i>High-speed connection</li>
                                <li><i class="bi bi-check-circle text-success me-2"></i>Charged to room</li>
                            </ul>

                            <form asp-action="PurchasePackage" method="post">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="packageId" value="@package.Id" />
                                <button type="submit" class="btn btn-@package.BadgeColor btn-buy w-100"
                                        onclick="return confirm('Purchase @package.Name for @package.Currency @package.Price? This will be charged to Room @Model.Guest.RoomNumber.');">
                                    <i class="bi bi-cart-check me-2"></i>Buy Now
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="text-center mt-5">
            <p class="text-white opacity-75">
                <i class="bi bi-shield-check me-1"></i>
                Secure payment - Charged directly to Room @Model.Guest.RoomNumber
            </p>
            <a asp-action="Dashboard" class="btn btn-outline-light mt-3">
                <i class="bi bi-arrow-left me-2"></i>Back to Dashboard
            </a>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
