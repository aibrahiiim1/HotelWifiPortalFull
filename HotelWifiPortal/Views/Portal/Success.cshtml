@{
    Layout = null;
    var returnUrl = ViewBag.ReturnUrl as string;
    var autoRedirect = !string.IsNullOrEmpty(returnUrl);
    var wifiPassword = TempData["WifiPassword"] as string;
    var successMessage = TempData["Success"] as string;
    var mikrotikIP = TempData["MikroTikIP"] as string;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Connected - WiFi Portal</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet" />
    @if (autoRedirect && string.IsNullOrEmpty(wifiPassword))
    {
        <meta http-equiv="refresh" content="3;url=@returnUrl" />
    }
    <style>
        body {
            background: linear-gradient(135deg, #1a1a2e 0%, #16213e 50%, #0f3460 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .success-card {
            background: rgba(255, 255, 255, 0.95);
            border-radius: 20px;
            padding: 3rem;
            text-align: center;
            max-width: 500px;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
        }
        .success-icon {
            width: 120px;
            height: 120px;
            background: linear-gradient(135deg, #28a745, #20c997);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 2rem;
            animation: pulse 2s infinite;
        }
        .success-icon i {
            font-size: 60px;
            color: white;
        }
        @@keyframes pulse {
            0%, 100% { transform: scale(1); }
            50% { transform: scale(1.05); }
        }
        .countdown {
            font-size: 1.2rem;
            color: #6c757d;
            margin-top: 1.5rem;
        }
        .spinner-border {
            width: 1rem;
            height: 1rem;
            margin-right: 0.5rem;
        }
        .password-display {
            background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
            border: 2px dashed #6c757d;
            border-radius: 15px;
            padding: 20px;
            margin: 20px 0;
        }
        .password-value {
            font-size: 2rem;
            font-weight: bold;
            letter-spacing: 8px;
            color: #0d6efd;
            font-family: monospace;
        }
        .password-note {
            background: #fff3cd;
            border-radius: 10px;
            padding: 12px;
            margin-top: 15px;
            font-size: 0.9rem;
        }
        .instruction-box {
            background: #e7f3ff;
            border: 1px solid #b6d4fe;
            border-radius: 10px;
            padding: 15px;
            margin: 20px 0;
            text-align: left;
        }
        .instruction-box ol {
            margin-bottom: 0;
            padding-left: 20px;
        }
        .instruction-box li {
            margin-bottom: 8px;
        }
    </style>
</head>
<body>
    <div class="success-card">
        <div class="success-icon">
            <i class="bi bi-wifi"></i>
        </div>
        
        <h1 class="text-success mb-3">You're Connected!</h1>
        
        @if (!string.IsNullOrEmpty(successMessage))
        {
            <p class="lead text-muted mb-3">@successMessage</p>
        }
        else
        {
            <p class="lead text-muted mb-4">
                Your WiFi access has been activated successfully.
            </p>
        }
        
        @if (!string.IsNullOrEmpty(wifiPassword))
        {
            <div class="password-display">
                <p class="text-muted mb-2">
                    <i class="bi bi-key me-1"></i>Your WiFi Password
                </p>
                <div class="password-value">@wifiPassword</div>
                <div class="password-note">
                    <i class="bi bi-exclamation-triangle me-1"></i>
                    <strong>Please save this password!</strong><br />
                    You'll need it to reconnect if your device disconnects.
                </div>
            </div>
            
            <div class="instruction-box">
                <p class="mb-2"><strong><i class="bi bi-info-circle me-1"></i>To connect to the internet:</strong></p>
                <ol>
                    <li>Close this page</li>
                    <li>Open your browser and visit any website (e.g., google.com)</li>
                    <li>If prompted, enter your <strong>Room Number</strong> and the password shown above</li>
                    <li>You should now have internet access!</li>
                </ol>
            </div>
        }
        
        @if (autoRedirect && string.IsNullOrEmpty(wifiPassword))
        {
            <div class="countdown">
                <span class="spinner-border spinner-border-sm" role="status"></span>
                Redirecting you in <span id="countdown">3</span> seconds...
            </div>
            
            <div class="mt-4">
                <a href="@returnUrl" class="btn btn-success btn-lg">
                    <i class="bi bi-arrow-right me-2"></i>Continue Now
                </a>
            </div>
        }
        else
        {
            <div class="alert alert-info">
                <i class="bi bi-info-circle me-2"></i>
                You can now close this page and browse the internet.
            </div>
            
            <div class="d-grid gap-2 mt-4">
                <a href="https://www.google.com" class="btn btn-success btn-lg" target="_blank">
                    <i class="bi bi-globe me-2"></i>Start Browsing
                </a>
                <a href="/Portal/Dashboard" class="btn btn-outline-primary">
                    <i class="bi bi-speedometer2 me-2"></i>View My Usage
                </a>
            </div>
        }
        
        <hr class="my-4" />
        
        <div class="text-muted small">
            <p class="mb-1"><i class="bi bi-shield-check me-1"></i> Secure Connection Established</p>
            <p class="mb-0">Enjoy your stay!</p>
        </div>
    </div>

    @if (autoRedirect && string.IsNullOrEmpty(wifiPassword))
    {
        <script>
            var seconds = 3;
            var countdownEl = document.getElementById('countdown');
            var returnUrl = '@Html.Raw(returnUrl)';
            
            var timer = setInterval(function() {
                seconds--;
                if (countdownEl) countdownEl.textContent = seconds;
                if (seconds <= 0) {
                    clearInterval(timer);
                    window.location.href = returnUrl;
                }
            }, 1000);
        </script>
    }
</body>
</html>
