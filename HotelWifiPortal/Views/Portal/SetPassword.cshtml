@model HotelWifiPortal.Models.ViewModels.SetPasswordViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Set WiFi Password</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
    <style>
        body {
            background: linear-gradient(135deg, #1a1a2e 0%, #16213e 50%, #0f3460 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
        }
        .password-card {
            background: rgba(255, 255, 255, 0.95);
            border-radius: 20px;
            padding: 40px;
            max-width: 450px;
            width: 100%;
            box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.4);
        }
        .logo-area {
            text-align: center;
            margin-bottom: 30px;
        }
        .logo-area i {
            font-size: 4rem;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }
        .welcome-text {
            text-align: center;
            margin-bottom: 25px;
        }
        .welcome-text h2 {
            color: #1a1a2e;
            font-weight: 600;
            margin-bottom: 10px;
        }
        .welcome-text p {
            color: #666;
            margin-bottom: 5px;
        }
        .room-badge {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 8px 20px;
            border-radius: 30px;
            display: inline-block;
            font-weight: 600;
            font-size: 1.1rem;
        }
        .form-control {
            border-radius: 12px;
            padding: 15px 20px;
            font-size: 1.2rem;
            letter-spacing: 4px;
            text-align: center;
            border: 2px solid #e0e0e0;
        }
        .form-control:focus {
            border-color: #667eea;
            box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.2);
        }
        .btn-primary {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border: none;
            border-radius: 12px;
            padding: 15px 30px;
            font-size: 1.1rem;
            font-weight: 600;
            width: 100%;
            transition: transform 0.2s, box-shadow 0.2s;
        }
        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 20px rgba(102, 126, 234, 0.3);
        }
        .password-rules {
            background: #f8f9fa;
            border-radius: 12px;
            padding: 20px;
            margin-bottom: 25px;
        }
        .password-rules h6 {
            color: #333;
            font-weight: 600;
            margin-bottom: 15px;
        }
        .rule-item {
            display: flex;
            align-items: center;
            margin-bottom: 8px;
            color: #666;
        }
        .rule-item i {
            margin-right: 10px;
            font-size: 1.1rem;
        }
        .rule-item.valid i {
            color: #28a745;
        }
        .rule-item.invalid i {
            color: #dc3545;
        }
        .alert {
            border-radius: 12px;
            border: none;
        }
        .info-box {
            background: linear-gradient(135deg, #e8f4fd 0%, #d4e8f9 100%);
            border-radius: 12px;
            padding: 15px;
            margin-bottom: 20px;
            text-align: center;
        }
        .info-box i {
            color: #0d6efd;
            font-size: 1.5rem;
            margin-bottom: 10px;
            display: block;
        }
    </style>
</head>
<body>
    <div class="password-card">
        <div class="logo-area">
            <i class="bi bi-wifi"></i>
        </div>
        
        <div class="welcome-text">
            <h2>Welcome, @Model.GuestName!</h2>
            <p>Room <span class="room-badge">@Model.RoomNumber</span></p>
            <p class="text-muted mt-3">Please set your WiFi password to continue</p>
        </div>
        
        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="alert alert-danger">
                <i class="bi bi-exclamation-circle me-2"></i>@Model.ErrorMessage
            </div>
        }
        
        <div class="info-box">
            <i class="bi bi-shield-lock"></i>
            <small>This password will be used for WiFi access during your stay.<br/>
            Please remember it - you'll need it to reconnect.</small>
        </div>
        
        <div class="password-rules">
            <h6><i class="bi bi-key me-2"></i>Password Requirements</h6>
            <div class="rule-item" id="rule-length">
                <i class="bi bi-circle"></i>
                <span>Minimum 5 digits</span>
            </div>
            <div class="rule-item" id="rule-numbers">
                <i class="bi bi-circle"></i>
                <span>Numbers only (0-9)</span>
            </div>
            <div class="rule-item" id="rule-match">
                <i class="bi bi-circle"></i>
                <span>Passwords must match</span>
            </div>
        </div>
        
        <form method="post" asp-action="SetPassword" id="passwordForm">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="GuestId" />
            <input type="hidden" asp-for="RoomNumber" />
            <input type="hidden" asp-for="GuestName" />
            <input type="hidden" asp-for="MacAddress" />
            <input type="hidden" asp-for="ClientIp" />
            <input type="hidden" asp-for="LinkLogin" />
            <input type="hidden" asp-for="LinkOrig" />
            
            <div class="mb-3">
                <label class="form-label fw-semibold">New WiFi Password</label>
                <input type="tel" 
                       asp-for="NewPassword" 
                       class="form-control" 
                       placeholder="• • • • •"
                       inputmode="numeric"
                       pattern="[0-9]*"
                       maxlength="20"
                       autocomplete="off"
                       id="newPassword" />
                <span asp-validation-for="NewPassword" class="text-danger small"></span>
            </div>
            
            <div class="mb-4">
                <label class="form-label fw-semibold">Confirm Password</label>
                <input type="tel" 
                       asp-for="ConfirmPassword" 
                       class="form-control" 
                       placeholder="• • • • •"
                       inputmode="numeric"
                       pattern="[0-9]*"
                       maxlength="20"
                       autocomplete="off"
                       id="confirmPassword" />
                <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
            </div>
            
            <button type="submit" class="btn btn-primary" id="submitBtn" disabled>
                <i class="bi bi-check-circle me-2"></i>Set Password & Connect
            </button>
        </form>
        
        <div class="text-center mt-4">
            <small class="text-muted">
                <i class="bi bi-info-circle me-1"></i>
                Need help? Contact the front desk
            </small>
        </div>
    </div>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        const newPasswordInput = document.getElementById('newPassword');
        const confirmPasswordInput = document.getElementById('confirmPassword');
        const submitBtn = document.getElementById('submitBtn');
        const ruleLengthEl = document.getElementById('rule-length');
        const ruleNumbersEl = document.getElementById('rule-numbers');
        const ruleMatchEl = document.getElementById('rule-match');
        
        function validatePassword() {
            const password = newPasswordInput.value;
            const confirmPassword = confirmPasswordInput.value;
            
            // Rule 1: Minimum 5 characters
            const lengthValid = password.length >= 5;
            updateRule(ruleLengthEl, lengthValid);
            
            // Rule 2: Numbers only
            const numbersOnly = /^\d*$/.test(password);
            const numbersValid = password.length > 0 && numbersOnly;
            updateRule(ruleNumbersEl, numbersValid);
            
            // Block non-numeric input
            if (!numbersOnly && password.length > 0) {
                newPasswordInput.value = password.replace(/\D/g, '');
            }
            if (!/^\d*$/.test(confirmPassword)) {
                confirmPasswordInput.value = confirmPassword.replace(/\D/g, '');
            }
            
            // Rule 3: Passwords match
            const matchValid = password.length > 0 && confirmPassword.length > 0 && password === confirmPassword;
            updateRule(ruleMatchEl, matchValid);
            
            // Enable submit button only if all rules pass
            const allValid = lengthValid && numbersValid && matchValid;
            submitBtn.disabled = !allValid;
            
            return allValid;
        }
        
        function updateRule(element, isValid) {
            const icon = element.querySelector('i');
            if (isValid) {
                element.classList.add('valid');
                element.classList.remove('invalid');
                icon.className = 'bi bi-check-circle-fill';
            } else {
                element.classList.remove('valid');
                element.classList.add('invalid');
                icon.className = 'bi bi-circle';
            }
        }
        
        newPasswordInput.addEventListener('input', validatePassword);
        confirmPasswordInput.addEventListener('input', validatePassword);
        
        // Form validation
        document.getElementById('passwordForm').addEventListener('submit', function(e) {
            if (!validatePassword()) {
                e.preventDefault();
            } else {
                submitBtn.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>Setting Password...';
                submitBtn.disabled = true;
            }
        });
    </script>
</body>
</html>
