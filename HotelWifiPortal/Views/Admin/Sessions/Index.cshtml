@model SessionListViewModel
@{
    ViewData["Title"] = "WiFi Sessions";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <form method="get" class="d-flex gap-2">
        <input type="text" name="room" value="@Model.RoomFilter" class="form-control" placeholder="Filter by room..." style="width: 150px;" />
        <select name="status" class="form-select" style="width: 150px;">
            <option value="">All Status</option>
            @{
                var statuses = new[] { "Active", "QuotaExceeded", "Disconnected", "Blocked", "Merged" };
            }
            @foreach (var status in statuses)
            {
                if (Model.StatusFilter == status)
                {
                    @Html.Raw($"<option value=\"{status}\" selected>{status}</option>")
                }
                else
                {
                    @Html.Raw($"<option value=\"{status}\">{status}</option>")
                }
            }
        </select>
        <button type="submit" class="btn btn-primary"><i class="bi bi-search"></i></button>
    </form>
    <div class="d-flex gap-2">
        <a asp-action="Active" class="btn btn-success">
            <i class="bi bi-broadcast me-1"></i>Live Sessions
        </a>
        <div class="btn-group">
            <form asp-action="RefreshUsage" method="post" class="d-inline">
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-outline-primary">
                    <i class="bi bi-arrow-clockwise me-1"></i>Refresh
                </button>
            </form>
            <button type="button" class="btn btn-outline-secondary dropdown-toggle dropdown-toggle-split" data-bs-toggle="dropdown">
            </button>
            <ul class="dropdown-menu dropdown-menu-end">
                <li>
                    <form asp-action="CleanupDuplicateSessions" method="post">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="dropdown-item" onclick="return confirm('Merge duplicate sessions for the same guest+MAC?')">
                            <i class="bi bi-layers me-2"></i>Cleanup Duplicates
                        </button>
                    </form>
                </li>
                <li>
                    <form asp-action="CloseQuotaExceededSessions" method="post">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="dropdown-item" onclick="return confirm('Close all QuotaExceeded sessions?')">
                            <i class="bi bi-x-circle me-2"></i>Close Exceeded Sessions
                        </button>
                    </form>
                </li>
            </ul>
        </div>
    </div>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show">
        <i class="bi bi-check-circle me-2"></i>@TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="card">
    <div class="table-responsive">
        <table class="table table-hover mb-0">
            <thead>
                <tr>
                    <th>Room</th>
                    <th>Guest</th>
                    <th>MAC Address</th>
                    <th>IP Address</th>
                    <th>Data Used</th>
                    <th>Duration</th>
                    <th>Controller</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var session in Model.Sessions)
                {
                    var statusClass = session.Status switch {
                        "Active" => "bg-success",
                        "QuotaExceeded" => "bg-warning text-dark",
                        "Blocked" => "bg-danger",
                        _ => "bg-secondary"
                    };
                    var rowClass = session.Status == "QuotaExceeded" ? "table-warning" : "";
                    
                    <tr class="@rowClass">
                        <td><span class="badge bg-secondary">@session.RoomNumber</span></td>
                        <td>@(session.GuestName ?? session.Guest?.GuestName ?? "-")</td>
                        <td><code class="small">@session.MacAddress</code></td>
                        <td>@(session.IpAddress ?? "-")</td>
                        <td>@session.BytesUsedMB.ToString("F1") MB</td>
                        <td>
                            @if (session.SessionDuration.HasValue)
                            {
                                @session.SessionDuration.Value.ToString(@"hh\:mm\:ss")
                            }
                        </td>
                        <td><span class="badge bg-info">@(session.ControllerType ?? "-")</span></td>
                        <td>
                            <span class="badge @statusClass">
                                @if (session.Status == "QuotaExceeded")
                                {
                                    <i class="bi bi-exclamation-triangle me-1"></i>
                                }
                                @session.Status
                            </span>
                        </td>
                        <td>
                            @if (session.Status == "Active" || session.Status == "QuotaExceeded")
                            {
                                <div class="btn-group btn-group-sm">
                                    <form asp-action="Disconnect" asp-route-id="@session.Id" method="post" class="d-inline" onsubmit="return confirm('Disconnect this session?');">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-outline-warning" title="Disconnect">
                                            <i class="bi bi-plug"></i>
                                        </button>
                                    </form>
                                    <form asp-action="Block" asp-route-id="@session.Id" method="post" class="d-inline" onsubmit="return confirm('Block this device?');">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-outline-danger" title="Block">
                                            <i class="bi bi-shield-x"></i>
                                        </button>
                                    </form>
                                </div>
                            }
                        </td>
                    </tr>
                }
                @if (!Model.Sessions.Any())
                {
                    <tr>
                        <td colspan="9" class="text-center text-muted py-5">
                            <i class="bi bi-laptop fs-1 d-block mb-3"></i>
                            No sessions found
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<p class="text-muted text-center mt-3">
    Showing @Model.Sessions.Count of @Model.TotalCount sessions
</p>

<!-- Legend -->
<div class="card mt-3">
    <div class="card-body py-2">
        <small class="text-muted">
            <strong>Status:</strong>
            <span class="badge bg-success ms-2">Active</span> Connected and using WiFi
            <span class="badge bg-warning text-dark ms-2">QuotaExceeded</span> Quota exhausted - needs upgrade
            <span class="badge bg-secondary ms-2">Disconnected</span> Session ended
            <span class="badge bg-danger ms-2">Blocked</span> Device blocked
        </small>
    </div>
</div>
