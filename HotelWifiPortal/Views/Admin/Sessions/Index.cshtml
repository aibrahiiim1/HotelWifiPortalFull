@model SessionListViewModel
@{
    ViewData["Title"] = "WiFi Sessions";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="bi bi-wifi me-2"></i>WiFi Sessions</h2>
    <div class="d-flex gap-2">
        <a asp-action="RoomUsage" class="btn btn-outline-primary">
            <i class="bi bi-building me-1"></i>Room Usage
        </a>
        <a asp-action="MacUsage" class="btn btn-outline-info">
            <i class="bi bi-laptop me-1"></i>Device Usage
        </a>
        <div class="btn-group">
            <form asp-action="RefreshUsage" method="post" class="d-inline">
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-outline-success">
                    <i class="bi bi-arrow-clockwise me-1"></i>Refresh
                </button>
            </form>
            <button type="button" class="btn btn-outline-success dropdown-toggle dropdown-toggle-split" data-bs-toggle="dropdown"></button>
            <ul class="dropdown-menu dropdown-menu-end">
                <li>
                    <form asp-action="SyncAllSessions" method="post">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="dropdown-item" onclick="return confirm('Sync all sessions from FreeRADIUS? This may take a moment.')">
                            <i class="bi bi-cloud-download me-2"></i>Sync All from FreeRADIUS
                        </button>
                    </form>
                </li>
                <li><hr class="dropdown-divider"></li>
                <li>
                    <form asp-action="CleanupDuplicateSessions" method="post">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="dropdown-item" onclick="return confirm('Merge duplicate sessions?')">
                            <i class="bi bi-layers me-2"></i>Cleanup Duplicates
                        </button>
                    </form>
                </li>
                <li>
                    <form asp-action="CloseQuotaExceededSessions" method="post">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="dropdown-item" onclick="return confirm('Close all QuotaExceeded sessions?')">
                            <i class="bi bi-x-circle me-2"></i>Close Exceeded Sessions
                        </button>
                    </form>
                </li>
            </ul>
        </div>
    </div>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show">
        <i class="bi bi-check-circle me-2"></i>@TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show">
        <i class="bi bi-exclamation-triangle me-2"></i>@TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<!-- Filter -->
<div class="card mb-3">
    <div class="card-body py-2">
        <form method="get" class="d-flex gap-2 align-items-center">
            <input type="text" name="room" value="@Model.RoomFilter" class="form-control" placeholder="Filter by room..." style="width: 150px;" />
            <select name="status" class="form-select" style="width: 150px;">
                <option value="">All Status</option>
                @foreach (var status in new[] { "Active", "QuotaExceeded", "Disconnected", "Blocked", "Merged" })
                {
                    <option value="@status" selected="@(Model.StatusFilter == status)">@status</option>
                }
            </select>
            <button type="submit" class="btn btn-primary"><i class="bi bi-search"></i></button>
            @if (!string.IsNullOrEmpty(Model.StatusFilter) || !string.IsNullOrEmpty(Model.RoomFilter))
            {
                <a asp-action="Index" class="btn btn-outline-secondary">Clear</a>
            }
        </form>
    </div>
</div>

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <span><i class="bi bi-list-ul me-2"></i>Individual Sessions</span>
        <small class="text-muted">Each row = one session (same MAC may appear multiple times)</small>
    </div>
    <div class="table-responsive">
        <table class="table table-hover mb-0">
            <thead class="table-light">
                <tr>
                    <th>Room</th>
                    <th>Guest</th>
                    <th>MAC Address</th>
                    <th>IP Address</th>
                    <th>Started</th>
                    <th>Session Data</th>
                    <th>Duration</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var session in Model.Sessions)
                {
                    var statusClass = session.Status switch {
                        "Active" => "bg-success",
                        "QuotaExceeded" => "bg-warning text-dark",
                        "Blocked" => "bg-danger",
                        _ => "bg-secondary"
                    };
                    var rowClass = session.Status == "QuotaExceeded" ? "table-warning" : 
                                   session.Status == "Active" ? "table-success" : "";
                    
                    <tr class="@rowClass">
                        <td><span class="badge bg-secondary">@session.RoomNumber</span></td>
                        <td>@(session.GuestName ?? session.Guest?.GuestName ?? "-")</td>
                        <td><code class="small">@session.MacAddress</code></td>
                        <td>@(session.IpAddress ?? "-")</td>
                        <td><small>@session.SessionStart.ToString("MMM dd HH:mm")</small></td>
                        <td>@session.BytesUsedMB.ToString("F1") MB</td>
                        <td>
                            @if (session.SessionDuration.HasValue)
                            {
                                @session.SessionDuration.Value.ToString(@"hh\:mm\:ss")
                            }
                        </td>
                        <td>
                            <span class="badge @statusClass">
                                @if (session.Status == "QuotaExceeded")
                                {
                                    <i class="bi bi-exclamation-triangle me-1"></i>
                                }
                                @session.Status
                            </span>
                        </td>
                        <td>
                            @if (session.Status == "Active" || session.Status == "QuotaExceeded")
                            {
                                <div class="btn-group btn-group-sm">
                                    <form asp-action="Disconnect" asp-route-id="@session.Id" method="post" class="d-inline" onsubmit="return confirm('Disconnect?');">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-outline-warning" title="Disconnect">
                                            <i class="bi bi-plug"></i>
                                        </button>
                                    </form>
                                    <form asp-action="Block" asp-route-id="@session.Id" method="post" class="d-inline" onsubmit="return confirm('Block this device?');">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-outline-danger" title="Block">
                                            <i class="bi bi-shield-x"></i>
                                        </button>
                                    </form>
                                </div>
                            }
                        </td>
                    </tr>
                }
                @if (!Model.Sessions.Any())
                {
                    <tr>
                        <td colspan="9" class="text-center text-muted py-5">
                            <i class="bi bi-laptop fs-1 d-block mb-3"></i>
                            No sessions found
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<p class="text-muted text-center mt-3">
    Showing @Model.Sessions.Count of @Model.TotalCount sessions
</p>

<!-- Legend -->
<div class="card mt-3">
    <div class="card-body py-2">
        <small class="text-muted">
            <strong>Status:</strong>
            <span class="badge bg-success ms-2">Active</span> Connected
            <span class="badge bg-warning text-dark ms-2">QuotaExceeded</span> Needs upgrade
            <span class="badge bg-secondary ms-2">Disconnected</span> Ended
            <span class="badge bg-danger ms-2">Blocked</span> Blocked
        </small>
    </div>
</div>

<!-- View Explanation -->
<div class="alert alert-light border mt-3">
    <h6><i class="bi bi-info-circle me-2"></i>View Differences:</h6>
    <ul class="mb-0 small">
        <li><strong>All Sessions (this view)</strong> - Individual session records. Same MAC appears multiple times if reconnected.</li>
        <li><strong>Room Usage</strong> - Usage aggregated by room (from Guest quota). Used for billing.</li>
        <li><strong>Device Usage</strong> - Usage aggregated by MAC address. Shows total data used per device across all sessions.</li>
    </ul>
</div>
