@model List<HotelWifiPortal.Models.Entities.WifiSession>
@{
    ViewData["Title"] = "Active Sessions";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var guests = ViewBag.Guests as Dictionary<int, HotelWifiPortal.Models.Entities.Guest> ?? new Dictionary<int, HotelWifiPortal.Models.Entities.Guest>();
    var roomUsage = ViewBag.RoomUsage as Dictionary<string, long> ?? new Dictionary<string, long>();
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="bi bi-broadcast me-2"></i>Active Sessions</h2>
    <div class="d-flex gap-2">
        <form asp-action="RefreshUsage" method="post" class="d-inline">
            @Html.AntiForgeryToken()
            <button type="submit" class="btn btn-outline-primary">
                <i class="bi bi-arrow-clockwise me-1"></i>Refresh Usage
            </button>
        </form>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-list me-1"></i>All Sessions
        </a>
        <a asp-action="RoomUsage" class="btn btn-outline-info">
            <i class="bi bi-building me-1"></i>Room Usage
        </a>
    </div>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show">
        <i class="bi bi-check-circle me-2"></i>@TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show">
        <i class="bi bi-x-circle me-2"></i>@TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<!-- Summary Cards -->
<div class="row mb-4">
    <div class="col-md-3">
        <div class="card bg-success text-white">
            <div class="card-body text-center">
                <h3 class="mb-0">@Model.Count</h3>
                <small>Active Sessions</small>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-primary text-white">
            <div class="card-body text-center">
                <h3 class="mb-0">@Model.Select(s => s.RoomNumber).Distinct().Count()</h3>
                <small>Unique Rooms</small>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-info text-white">
            <div class="card-body text-center">
                <h3 class="mb-0">@((Model.Sum(s => s.BytesUsed) / 1073741824.0).ToString("N2")) GB</h3>
                <small>Session Data</small>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-warning text-dark">
            <div class="card-body text-center">
                @{
                    var avgDuration = Model.Any() ? Model.Average(s => (DateTime.UtcNow - s.SessionStart).TotalMinutes) : 0;
                }
                <h3 class="mb-0">@TimeSpan.FromMinutes(avgDuration).ToString(@"hh\:mm")</h3>
                <small>Avg Duration</small>
            </div>
        </div>
    </div>
</div>

<div class="card">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Room</th>
                        <th>Guest</th>
                        <th>Device</th>
                        <th>MAC / IP</th>
                        <th>Room Quota</th>
                        <th>Duration</th>
                        <th>Session Data</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Any())
                    {
                        @foreach (var session in Model.OrderBy(s => s.RoomNumber))
                        {
                            var guest = guests.ContainsKey(session.GuestId) ? guests[session.GuestId] : null;
                            var quotaPercent = guest != null && guest.TotalQuotaBytes > 0 
                                ? (int)((guest.UsedQuotaBytes * 100) / guest.TotalQuotaBytes) 
                                : 0;
                            var isOverQuota = guest != null && guest.UsedQuotaBytes >= guest.TotalQuotaBytes;
                            var quotaBarColor = quotaPercent > 100 ? "bg-danger" : quotaPercent > 80 ? "bg-warning" : "bg-success";
                            
                            <tr class="@(isOverQuota ? "table-danger" : "")">
                                <td><strong>@session.RoomNumber</strong></td>
                                <td>@session.GuestName</td>
                                <td>
                                    <i class="bi bi-@(session.DeviceType == "Mobile" ? "phone" : session.DeviceType == "Tablet" ? "tablet" : "laptop") me-1"></i>
                                    @(session.DeviceType ?? "Unknown")
                                </td>
                                <td>
                                    <code class="small">@session.MacAddress</code>
                                    <br /><small class="text-muted">@session.IpAddress</small>
                                </td>
                                <td style="min-width: 150px;">
                                    @if (guest != null)
                                    {
                                        <div class="progress" style="height: 18px;">
                                            <div class="progress-bar @quotaBarColor" style="width: @Math.Min(quotaPercent, 100)%">
                                                @quotaPercent%
                                            </div>
                                        </div>
                                        <small class="text-muted">
                                            @((guest.UsedQuotaBytes / 1073741824.0).ToString("N2"))/@((guest.TotalQuotaBytes / 1073741824.0).ToString("N2")) GB
                                        </small>
                                        @if (isOverQuota)
                                        {
                                            <span class="badge bg-danger ms-1">EXCEEDED</span>
                                        }
                                    }
                                    else
                                    {
                                        <span class="text-muted">N/A</span>
                                    }
                                </td>
                                <td>
                                    @{
                                        var duration = DateTime.UtcNow - session.SessionStart;
                                    }
                                    <span class="badge bg-light text-dark">@duration.ToString(@"hh\:mm\:ss")</span>
                                    <br /><small class="text-muted">@session.SessionStart.ToString("HH:mm")</small>
                                </td>
                                <td>
                                    @{
                                        var mbUsed = session.BytesUsed / 1048576.0;
                                    }
                                    @if (mbUsed >= 1024)
                                    {
                                        <span class="fw-bold">@((mbUsed / 1024).ToString("N2")) GB</span>
                                    }
                                    else
                                    {
                                        <span>@mbUsed.ToString("N1") MB</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <form asp-action="ForceExpireQuota" asp-route-id="@session.Id" method="post" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-warning" title="Force expire quota"
                                                    onclick="return confirm('Force expire quota for Room @session.RoomNumber?')">
                                                <i class="bi bi-hourglass-bottom"></i>
                                            </button>
                                        </form>
                                        <form asp-action="Disconnect" asp-route-id="@session.Id" method="post" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-outline-danger" title="Disconnect"
                                                    onclick="return confirm('Disconnect this device?')">
                                                <i class="bi bi-x-circle"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="8" class="text-center py-5 text-muted">
                                <i class="bi bi-wifi-off display-4 d-block mb-3"></i>
                                <h5>No Active Sessions</h5>
                                <p>There are currently no active WiFi sessions.</p>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Legend -->
<div class="card mt-3">
    <div class="card-body py-2">
        <small class="text-muted">
            <strong>Legend:</strong>
            <span class="badge bg-danger ms-2">EXCEEDED</span> Quota exceeded
            <span class="ms-3"><i class="bi bi-hourglass-bottom text-warning"></i></span> Force expire quota
            <span class="ms-3"><i class="bi bi-x-circle text-danger"></i></span> Disconnect session
        </small>
    </div>
</div>

@section Scripts {
<script>
    // Auto-refresh every 30 seconds
    setTimeout(function() { location.reload(); }, 30000);
</script>
}
