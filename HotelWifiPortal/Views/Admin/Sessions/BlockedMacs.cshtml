@model List<HotelWifiPortal.Models.Entities.BlockedMac>
@{
    ViewData["Title"] = "Blocked MACs";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="bi bi-shield-x me-2"></i>Blocked MAC Addresses</h2>
    <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#addBlockModal">
        <i class="bi bi-plus-lg me-2"></i>Block MAC
    </button>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show">
        <i class="bi bi-check-circle me-2"></i>@TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show">
        <i class="bi bi-exclamation-circle me-2"></i>@TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="card">
    <div class="card-header bg-light">
        <ul class="nav nav-tabs card-header-tabs">
            <li class="nav-item">
                <a class="nav-link" asp-action="Index">All Sessions</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-action="Active">Live Sessions</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-action="RoomUsage">Room Usage</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-action="MacUsage">Device Usage</a>
            </li>
            <li class="nav-item">
                <a class="nav-link active" asp-action="BlockedMacs">Blocked MACs</a>
            </li>
        </ul>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>MAC Address</th>
                        <th>Reason</th>
                        <th>Room</th>
                        <th>Guest</th>
                        <th>Blocked By</th>
                        <th>Blocked At</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var blocked in Model)
                        {
                            <tr class="@(blocked.IsActive ? "" : "table-secondary")">
                                <td>
                                    <code class="text-danger">@blocked.MacAddress</code>
                                </td>
                                <td>@(blocked.Reason ?? "-")</td>
                                <td>@(blocked.RoomNumber ?? "-")</td>
                                <td>@(blocked.GuestName ?? "-")</td>
                                <td>@(blocked.BlockedBy ?? "-")</td>
                                <td>
                                    <small>@blocked.BlockedAt.ToString("MMM dd, HH:mm")</small>
                                </td>
                                <td>
                                    @if (blocked.IsActive)
                                    {
                                        <span class="badge bg-danger">Blocked</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success">Unblocked</span>
                                        @if (blocked.UnblockedAt.HasValue)
                                        {
                                            <br /><small class="text-muted">by @blocked.UnblockedBy at @blocked.UnblockedAt.Value.ToString("MMM dd, HH:mm")</small>
                                        }
                                    }
                                </td>
                                <td>
                                    @if (blocked.IsActive)
                                    {
                                        <form asp-action="Unblock" asp-route-id="@blocked.Id" method="post" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-sm btn-outline-success" 
                                                    onclick="return confirm('Unblock this MAC address?')">
                                                <i class="bi bi-unlock"></i> Unblock
                                            </button>
                                        </form>
                                    }
                                    <form asp-action="DeleteBlockedMac" asp-route-id="@blocked.Id" method="post" class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-sm btn-outline-danger" 
                                                onclick="return confirm('Delete this blocked MAC record?')">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="8" class="text-center py-4 text-muted">
                                <i class="bi bi-shield-check display-6 d-block mb-2"></i>
                                No blocked MAC addresses
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="card mt-4">
    <div class="card-header bg-light">
        <h6 class="mb-0"><i class="bi bi-info-circle me-2"></i>How Blocking Works</h6>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <h6>When you block a MAC:</h6>
                <ol class="small text-muted">
                    <li>User is immediately disconnected via RADIUS CoA</li>
                    <li>MAC is added to FreeRADIUS radcheck with Auth-Type := Reject</li>
                    <li>Future authentication attempts from this MAC will be rejected</li>
                    <li>Block persists until manually unblocked</li>
                </ol>
            </div>
            <div class="col-md-6">
                <h6>When you unblock a MAC:</h6>
                <ol class="small text-muted">
                    <li>Auth-Type := Reject entry is removed from FreeRADIUS</li>
                    <li>MAC can authenticate again with valid credentials</li>
                    <li>Previous session history is preserved</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<!-- Add Block Modal -->
<div class="modal fade" id="addBlockModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="AddBlockedMac" method="post">
                @Html.AntiForgeryToken()
                <div class="modal-header">
                    <h5 class="modal-title"><i class="bi bi-shield-x me-2"></i>Block MAC Address</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">MAC Address <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" name="macAddress" 
                               placeholder="AA:BB:CC:DD:EE:FF" required 
                               pattern="^([0-9A-Fa-f]{2}[:-]){5}([0-9A-Fa-f]{2})$" />
                        <small class="text-muted">Format: AA:BB:CC:DD:EE:FF or AA-BB-CC-DD-EE-FF</small>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Reason</label>
                        <textarea class="form-control" name="reason" rows="2" placeholder="Optional reason for blocking"></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-shield-x me-2"></i>Block MAC
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
