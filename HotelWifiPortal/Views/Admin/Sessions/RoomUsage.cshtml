@model List<HotelWifiPortal.Controllers.Admin.RoomUsageViewModel>
@{
    ViewData["Title"] = "Room Usage";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var totalUsageBytes = (long)(ViewBag.TotalUsageBytes ?? 0);
    var totalRooms = (int)(ViewBag.TotalRooms ?? 0);
    var quotaExceededCount = Model.Count(r => r.IsQuotaExceeded);
    var paidPackageCount = Model.Count(r => r.HasPurchasedPackage);
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="bi bi-building me-2"></i>Room Usage Summary</h2>
    <div class="d-flex gap-2">
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-list me-1"></i>All Sessions
        </a>
        <a asp-action="MacUsage" class="btn btn-outline-info">
            <i class="bi bi-laptop me-1"></i>Device Usage
        </a>
    </div>
</div>

<!-- Summary Cards -->
<div class="row mb-4">
    <div class="col-md-3">
        <div class="card bg-primary text-white">
            <div class="card-body text-center">
                <h3 class="mb-0">@totalRooms</h3>
                <small>Total Rooms</small>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-info text-white">
            <div class="card-body text-center">
                <h3 class="mb-0">@((totalUsageBytes / 1073741824.0).ToString("N2")) GB</h3>
                <small>Total Usage</small>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card @(quotaExceededCount > 0 ? "bg-danger" : "bg-success") text-white">
            <div class="card-body text-center">
                <h3 class="mb-0">@quotaExceededCount</h3>
                <small>Quota Exceeded</small>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-warning text-dark">
            <div class="card-body text-center">
                <h3 class="mb-0">@paidPackageCount</h3>
                <small>Paid Upgrades</small>
            </div>
        </div>
    </div>
</div>

<!-- Filter -->
<div class="card mb-3">
    <div class="card-body py-2">
        <form method="get" class="d-flex gap-2 align-items-center">
            <input type="text" name="room" value="@ViewBag.RoomFilter" class="form-control" placeholder="Filter by room..." style="width: 200px;" />
            <button type="submit" class="btn btn-primary"><i class="bi bi-search"></i> Search</button>
            @if (!string.IsNullOrEmpty((string?)ViewBag.RoomFilter))
            {
                <a asp-action="RoomUsage" class="btn btn-outline-secondary">Clear</a>
            }
        </form>
    </div>
</div>

<div class="card">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Room</th>
                        <th>Guest</th>
                        <th>Usage</th>
                        <th>Quota Breakdown</th>
                        <th>Paid Packages</th>
                        <th>Status</th>
                        <th>Devices</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var room in Model)
                    {
                        var quotaPercent = room.QuotaPercentUsed;
                        var quotaBarColor = room.IsQuotaExceeded ? "bg-danger" : quotaPercent > 80 ? "bg-warning" : "bg-success";
                        var rowClass = room.IsQuotaExceeded ? "table-danger" :
                        room.HasPurchasedPackage ? "table-info" :
                        room.ActiveSessions > 0 ? "table-success" : "";
                        <tr class="@rowClass">
                            <td>
                                <strong>@room.RoomNumber</strong>
                                @if (room.HasPurchasedPackage)
                                {
                                    <br />
                            
                                    <span class="badge bg-warning text-dark"><i class="bi bi-star-fill"></i> Premium</span>
                                }
                            </td>
                            <td>@(room.GuestName ?? "-")</td>
                            <td>
                                @if (room.UsedQuotaBytes >= 1073741824)
                                {
                                    <span class="fw-bold">@room.UsedQuotaGB.ToString("N2") GB</span>
                                }
                                else
                                {
                                    <span>@((room.UsedQuotaBytes / 1048576.0).ToString("N1")) MB</span>
                                }
                            </td>
                            <td style="min-width: 200px;">
                                @if (room.TotalQuotaBytes > 0)
                                {
                                    <!-- Progress bar -->
                                    <div class="progress mb-1" style="height: 18px;">
                                        <div class="progress-bar @quotaBarColor" style="width: @Math.Min(quotaPercent, 100)%">
                                            @quotaPercent%
                                        </div>
                                    </div>

                                    <!-- Quota breakdown -->
                                    <div class="small">
                                        <span class="text-muted">Free:</span> <span class="fw-semibold">@room.FreeQuotaGB.ToString("N1") GB</span>
                                        @if (room.PaidQuotaBytes > 0)
                                        {
                                            <span class="text-success ms-2">
                                                <i class="bi bi-plus-circle"></i> Paid: <span class="fw-semibold">@room.PaidQuotaGB.ToString("N1") GB</span>
                                            </span>
                                        }
                                    </div>
                                    <div class="small text-muted">
                                        Remaining: <span class="fw-semibold @(room.RemainingQuotaGB <= 0 ? "text-danger" : "")">@room.RemainingQuotaGB.ToString("N2") GB</span>
                                    </div>
                                }
                                else
                                {
                                    <span class="text-muted">No quota set</span>
                                }
                            </td>
                            <td style="min-width: 180px;">
                                @if (room.ActivePaidPackages.Any())
                                {
                                    @foreach (var pkg in room.ActivePaidPackages)
                                    {
                                        var pkgClass = pkg.IsExpired ? "bg-secondary" :
                                        pkg.PackageType == "TimeBased" ? "bg-info" :
                                        pkg.PackageType == "RestOfStay" ? "bg-success" : "bg-primary";
                                        <div class="mb-1">
                                            <span class="badge @pkgClass">
                                                @pkg.PackageName
                                            </span>
                                            @if (pkg.PackageType == "TimeBased")
                                            {
                                                @if (pkg.IsExpired)
                                                {
                                                    <br />
                                
                                                    <small class="text-danger"><i class="bi bi-clock-fill"></i> Expired</small>
                                                }
                                                else
                                                {
                                                    <br />
                                
                                                    <small class="text-info"><i class="bi bi-clock"></i> @pkg.RemainingTimeDisplay</small>
                                                }
                                            }
                                            else if (pkg.PackageType == "RestOfStay")
                                            {
                                                <br />
                                
                                                <small class="text-success"><i class="bi bi-infinity"></i> Rest of Stay</small>
                                            }
                                            else if (pkg.PackageType == "DataBased" && pkg.QuotaGB > 0)
                                            {
                                                <br />
                                
                                                <small class="text-primary">
                                                    <i class="bi bi-database"></i> @pkg.RemainingGB.ToString("N1")/@pkg.QuotaGB.ToString("N0") GB
                                                </small>
                                            }
                                            @if (pkg.DownloadSpeedKbps.HasValue)
                                            {
                                                <br />
                                
                                                <small class="text-muted">
                                                    <i class="bi bi-speedometer2"></i> @((pkg.DownloadSpeedKbps ?? 0) / 1000)M/@((pkg.UploadSpeedKbps ?? 0) / 1000)M
                                                </small>
                                            }
                                        </div>
                                    }
                                }
                                else
                                {
                                    <span class="text-muted small">-</span>
                                }
                            </td>
                            <td>
                                @if (room.IsQuotaExceeded)
                                {
                                    <span class="badge bg-danger">
                                        <i class="bi bi-exclamation-triangle-fill me-1"></i>Exceeded
                                    </span>
                                    @if (room.HasPurchasedPackage)
                                    {
                                        <br />
                                        <span class="badge bg-info mt-1">
                                            <i class="bi bi-arrow-repeat me-1"></i>Upgraded
                                        </span>
                                    }
                                }
                                else if (room.ActiveSessions > 0)
                                {
                                    <span class="badge bg-success">
                                        <i class="bi bi-wifi me-1"></i>@room.ActiveSessions online
                                    </span>
                                }
                                else if (room.QuotaExceededSessions > 0)
                                {
                                    <span class="badge bg-warning text-dark">
                                        <i class="bi bi-pause-circle me-1"></i>@room.QuotaExceededSessions blocked
                                    </span>
                                }
                                else
                                {
                                    <span class="text-muted">offline</span>
                                }
                            </td>
                            <td>
                                <span class="badge bg-secondary">@room.DeviceCount</span>
                            </td>
                        </tr>
                    }
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="7" class="text-center py-5 text-muted">
                                <i class="bi bi-building fs-1 d-block mb-3"></i>
                                No active guests found
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Legend -->
<div class="card mt-3">
    <div class="card-body py-2">
        <div class="d-flex gap-4 flex-wrap align-items-center">
            <small class="text-muted"><strong>Legend:</strong></small>
            <small><span class="badge bg-danger">Exceeded</span> - Quota exceeded</small>
            <small><span class="badge bg-info">Time-Based</span> - Package with time limit</small>
            <small><span class="badge bg-success">Rest of Stay</span> - Valid until checkout</small>
            <small><span class="badge bg-primary">Data-Based</span> - Package with data limit</small>
            <small><i class="bi bi-clock text-info"></i> - Remaining time</small>
        </div>
    </div>
</div>

<p class="text-muted text-center mt-3">
    Showing @Model.Count of @ViewBag.TotalCount rooms
</p>
