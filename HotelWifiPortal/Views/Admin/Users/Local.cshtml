@model List<HotelWifiPortal.Models.Entities.LocalUser>
@{
    ViewData["Title"] = "Local Users";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="bi bi-person-badge me-2"></i>Local Users</h2>
    <div class="d-flex gap-2">
        <form asp-action="SyncAllLocalUsers" method="post" class="d-inline">
            @Html.AntiForgeryToken()
            <button type="submit" class="btn btn-outline-success" onclick="return confirm('Sync all local users to FreeRADIUS?')">
                <i class="bi bi-arrow-repeat me-2"></i>Sync to RADIUS
            </button>
        </form>
        <a asp-action="BatchCreate" class="btn btn-outline-primary">
            <i class="bi bi-people-fill me-2"></i>Batch Create
        </a>
        <a asp-action="CreateLocal" class="btn btn-primary">
            <i class="bi bi-plus-lg me-2"></i>Add User
        </a>
    </div>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show">
        <i class="bi bi-check-circle me-2"></i>@TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Warning"] != null)
{
    <div class="alert alert-warning alert-dismissible fade show">
        <i class="bi bi-exclamation-triangle me-2"></i>@TempData["Warning"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show">
        <i class="bi bi-x-circle me-2"></i>@TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="alert alert-info">
    <i class="bi bi-info-circle me-2"></i>
    <strong>Standalone Mode:</strong> Local users can authenticate to the WiFi portal when PMS integration is disabled or for guests without PMS reservations.
    Click <strong>"Sync to RADIUS"</strong> to push all local users to FreeRADIUS.
</div>

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Username</th>
                        <th>Type</th>
                        <th>Quota / Usage</th>
                        <th>Speed</th>
                        <th>Devices</th>
                        <th>Valid Until</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var user in Model)
                        {
                            var usagePercent = user.QuotaGB > 0 ? (user.UsedQuotaGB / user.QuotaGB * 100) : 0;
                            var isExpired = user.ValidUntil.HasValue && user.ValidUntil.Value < DateTime.Now;
                            <tr class="@(user.IsQuotaExceeded ? "table-danger" : isExpired ? "table-warning" : "")">
                                <td>
                                    <strong>@user.Username</strong>
                                    @if (!string.IsNullOrEmpty(user.FullName))
                                    {
                                        <br/><small class="text-muted">@user.FullName</small>
                                    }
                                </td>
                                <td><span class="badge bg-secondary">@user.UserType</span></td>
                                <td style="min-width: 180px;">
                                    @if (user.QuotaBytes > 0)
                                    {
                                        <div class="progress mb-1" style="height: 18px;">
                                            <div class="progress-bar @(usagePercent > 100 ? "bg-danger" : usagePercent > 80 ? "bg-warning" : "bg-success")" 
                                                 style="width: @Math.Min(usagePercent, 100)%;">
                                                @usagePercent.ToString("N0")%
                                            </div>
                                        </div>
                                        <small class="text-muted">
                                            @user.UsedQuotaGB.ToString("N2") / @user.QuotaGB.ToString("N1") GB
                                            @if (user.IsQuotaExceeded)
                                            {
                                                <span class="text-danger"><i class="bi bi-exclamation-triangle-fill"></i></span>
                                            }
                                        </small>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success">Unlimited</span>
                                    }
                                </td>
                                <td>
                                    @if (user.DownloadSpeedKbps.HasValue || user.UploadSpeedKbps.HasValue)
                                    {
                                        <small>
                                            <i class="bi bi-arrow-down text-success"></i> @((user.DownloadSpeedKbps ?? 0) / 1000)M
                                            <br/>
                                            <i class="bi bi-arrow-up text-primary"></i> @((user.UploadSpeedKbps ?? 0) / 1000)M
                                        </small>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    <span class="badge @(user.CurrentDevices >= user.MaxDevices ? "bg-warning" : "bg-secondary")">
                                        @user.CurrentDevices / @user.MaxDevices
                                    </span>
                                </td>
                                <td>
                                    @if (user.ValidUntil.HasValue)
                                    {
                                        if (isExpired)
                                        {
                                            <span class="text-danger">@user.ValidUntil.Value.ToString("MMM dd, yyyy")</span>
                                            <br /><small class="badge bg-danger">Expired</small>
                                        }
                                        else
                                        {
                                            @user.ValidUntil.Value.ToString("MMM dd, yyyy")
                                            <br/><small class="text-muted">@((user.ValidUntil.Value - DateTime.Now).Days) days left</small>
                                        }
                                    }
                                    else
                                    {
                                        <span class="text-muted">No expiry</span>
                                    }
                                </td>
                                <td>
                                    @if (user.IsActive)
                                    {
                                        <span class="badge bg-success">Active</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Inactive</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <a asp-action="EditLocal" asp-route-id="@user.Id" class="btn btn-outline-primary" title="Edit">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <form asp-action="ResetLocalUsage" asp-route-id="@user.Id" method="post" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-outline-warning" title="Reset Usage">
                                                <i class="bi bi-arrow-counterclockwise"></i>
                                            </button>
                                        </form>
                                        <button type="button" class="btn btn-outline-danger" title="Delete"
                                                onclick="confirmDelete(@user.Id, '@user.Username')">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="8" class="text-center py-4 text-muted">
                                <i class="bi bi-inbox display-6 d-block mb-2"></i>
                                No local users found
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete the user "<span id="deleteUserName"></span>"?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form id="deleteForm" method="post" class="d-inline">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<script>
function confirmDelete(id, name) {
    document.getElementById('deleteUserName').textContent = name;
    document.getElementById('deleteForm').action = '@Url.Action("DeleteLocal")/' + id;
    new bootstrap.Modal(document.getElementById('deleteModal')).show();
}
</script>
}
