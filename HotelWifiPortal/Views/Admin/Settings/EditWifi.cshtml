@model WifiSettingsViewModel
@{
    ViewData["Title"] = Model.Id == 0 ? "Add WiFi Controller" : "Edit WiFi Controller";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header">
                <i class="bi bi-router me-2"></i>@ViewData["Title"]
            </div>
            <div class="card-body">
                <form asp-action="@(Model.Id == 0 ? "CreateWifi" : "EditWifi")" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="Id" />

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label asp-for="ControllerType" class="form-label">Controller Type *</label>
                            <select asp-for="ControllerType" class="form-select">
                                <option value="Ruckus">Ruckus ZoneDirector</option>
                                <option value="Mikrotik">MikroTik RouterOS</option>
                                <option value="ExtremeCloud">ExtremeCloud IQ</option>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Name" class="form-label">Display Name *</label>
                            <input asp-for="Name" class="form-control" placeholder="e.g., Main WiFi Controller" />
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-8">
                            <label asp-for="IpAddress" class="form-label">IP Address / Hostname</label>
                            <input asp-for="IpAddress" class="form-control" placeholder="192.168.1.1 or controller.local" />
                        </div>
                        <div class="col-md-4">
                            <label asp-for="Port" class="form-label">Port</label>
                            <input asp-for="Port" type="number" class="form-control" placeholder="Optional" />
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label asp-for="Username" class="form-label">Username</label>
                            <input asp-for="Username" class="form-control" />
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Password" class="form-label">Password</label>
                            <input asp-for="Password" type="password" class="form-control" placeholder="@(Model.Id > 0 ? "Leave blank to keep current" : "")" />
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ApiUrl" class="form-label">API URL (for cloud controllers)</label>
                        <input asp-for="ApiUrl" class="form-control" placeholder="https://api.extremecloudiq.com" />
                    </div>

                    <div class="mb-3">
                        <label asp-for="ApiKey" class="form-label">API Key (if required)</label>
                        <input asp-for="ApiKey" class="form-control" />
                    </div>

                    <hr />

                    <div class="row mb-3">
                        <div class="col-md-4">
                            <div class="form-check form-switch">
                                <input asp-for="UseHttps" class="form-check-input" type="checkbox" />
                                <label asp-for="UseHttps" class="form-check-label">Use HTTPS</label>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-check form-switch">
                                <input asp-for="IgnoreSslErrors" class="form-check-input" type="checkbox" />
                                <label asp-for="IgnoreSslErrors" class="form-check-label">Ignore SSL Errors</label>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-check form-switch">
                                <input asp-for="IsEnabled" class="form-check-input" type="checkbox" />
                                <label asp-for="IsEnabled" class="form-check-label">Enabled</label>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <div class="form-check form-switch">
                            <input asp-for="IsDefault" class="form-check-input" type="checkbox" />
                            <label asp-for="IsDefault" class="form-check-label">Set as Default Controller</label>
                        </div>
                    </div>

                    <div class="d-flex justify-content-between">
                        <a asp-action="Wifi" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left me-1"></i>Cancel
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-lg me-1"></i>Save Controller
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
