    </div>

    <!-- ExtremeCloud IQ -->
    <div class="col-md-6 col-lg-3">
        <div class="card h-100 @(extremeCloud?.IsEnabled == true ? "border-success" : "")">
            <div class="card-header d-flex justify-content-between align-items-center">
                <span><i class="bi bi-cloud-check me-2"></i>ExtremeCloud</span>
                @if (extremeCloud != null)
                {
                    <span class="badge @(extremeCloud.IsEnabled ? "bg-success" : "bg-secondary")">
                        @(extremeCloud.IsEnabled ? "Active" : "Disabled")
                    </span>
                }
            </div>
            <div class="card-body">
                @if (extremeCloud != null)
                {
                    <dl class="mb-0 small">
                        <dt>API URL</dt>
                        <dd class="text-truncate">@(extremeCloud.ApiUrl ?? "Not set")</dd>
                        <dt>Status</dt>
                        <dd>
                            <span class="badge @(extremeCloud.ConnectionStatus == "connected" ? "bg-success" : "bg-warning")">
                                @(extremeCloud.ConnectionStatus ?? "Unknown")
                            </span>
                        </dd>
                    </dl>
                }
                else
                {
                    <p class="text-muted small mb-0">Not configured</p>
                }
            </div>
            <div class="card-footer bg-white">
                @if (extremeCloud != null)
                {
                    <div class="btn-group w-100" role="group">
                        <a href="/Admin/Settings/ConfigureExtremeCloud" class="btn btn-sm btn-outline-primary">
                            <i class="bi bi-gear me-1"></i>Configure
