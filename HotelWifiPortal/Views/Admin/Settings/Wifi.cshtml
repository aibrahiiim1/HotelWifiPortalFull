<!-- All Controllers List -->
@if (Model.Any())
{
    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <span><i class="bi bi-list me-2"></i>All Configured Controllers</span>
        </div>
        <div class="card-body p-0">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Name</th>
                        <th>Type</th>
                        <th>Mode</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var controller in Model)
                    {
                        <tr>
                            <td>
                                @controller.Name
                                @if (controller.IsDefault)
                                {
                                    <span class="badge bg-primary ms-1">Default</span>
                                }
                            </td>
                            <td><span class="badge bg-info">@controller.ControllerType</span></td>
                            <td>
                                @if (string.IsNullOrEmpty(controller.Username))
                                {
                                    <span class="badge bg-success">RADIUS</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning">API</span>
                                }
                            </td>
                            <td>
                                <span class="badge @(controller.IsEnabled ? "bg-success" : "bg-secondary")">
                                    @(controller.IsEnabled ? "Enabled" : "Disabled")
                                </span>
                            </td>
                            <td>
                                <div class="btn-group btn-group-sm">
                                    @{
                                        var editUrl = controller.ControllerType switch
                                        {
                                            "Mikrotik" => "/Admin/Settings/ConfigureMikrotik",
                                            "RuckusZD" => "/Admin/Settings/ConfigureRuckusZD",
                                            "Ruckus" => "/Admin/Settings/ConfigureRuckusCloud",
                                            "ExtremeCloud" => "/Admin/Settings/ConfigureExtremeCloud",
                                            _ => $"/Admin/Settings/EditWifi/{controller.Id}"
                                        };
                                    }
                                    <a href="@editUrl" class="btn btn-outline-primary">
                                        <i class="bi bi-pencil"></i> Edit
                                    </a>
                                    <form action="/Admin/Settings/DeleteWifi/@controller.Id" method="post" style="display:inline;" onsubmit="return confirm('Delete this controller?');">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-outline-danger">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}

<!-- Info about RADIUS Mode -->
<div class="card mt-4">
    <div class="card-header bg-info text-white">
        <i class="bi bi-info-circle me-2"></i>About RADIUS Mode
    </div>
    <div class="card-body">
        <p class="mb-2">This portal uses <strong>RADIUS mode</strong> by default. In this mode:</p>
        <ul class="mb-0">
            <li>No direct API connection to WiFi controllers is needed</li>
            <li>MikroTik/Ruckus sends authentication requests to this portal's built-in RADIUS server</li>
            <li>Usage tracking and quota enforcement is handled via RADIUS accounting</li>
            <li>Configure your WiFi controller to use this server as RADIUS server (ports 1812/1813)</li>
        </ul>
    </div>
</div>
