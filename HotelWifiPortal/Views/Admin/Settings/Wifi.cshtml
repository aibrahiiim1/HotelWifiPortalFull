                            </span>
                        </dd>
                    </dl>
                }
                else
                {
                    <p class="text-muted small mb-0">Not configured</p>
                }
            </div>
            <div class="card-footer bg-white">
                @if (ruckusCloud != null)
                {
                    <div class="btn-group w-100" role="group">
                        <a href="/Admin/Settings/ConfigureRuckusCloud" class="btn btn-sm btn-outline-primary">
                            <i class="bi bi-gear me-1"></i>Configure
                        </a>
                        <form action="/Admin/Settings/ToggleController/@ruckusCloud.Id" method="post" style="display:inline;">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-sm @(ruckusCloud.IsEnabled ? "btn-outline-warning" : "btn-outline-success")">
