@model List<WifiControllerSettings>
@{
    ViewData["Title"] = "WiFi Controllers";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    
    var mikrotik = Model.FirstOrDefault(m => m.ControllerType == "Mikrotik");
    var ruckusZd = Model.FirstOrDefault(m => m.ControllerType == "RuckusZD");
    var ruckusCloud = Model.FirstOrDefault(m => m.ControllerType == "Ruckus");
    var extremeCloud = Model.FirstOrDefault(m => m.ControllerType == "ExtremeCloud");
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <p class="text-muted mb-0">Configure WiFi controllers for guest authentication and bandwidth management.</p>
</div>

<!-- Controller Cards -->
<div class="row g-4 mb-4">
    <!-- MikroTik -->
    <div class="col-md-6 col-lg-3">
        <div class="card h-100 @(mikrotik?.IsEnabled == true ? "border-success" : "")">
            <div class="card-header d-flex justify-content-between align-items-center">
                <span><i class="bi bi-router me-2"></i>MikroTik</span>
                @if (mikrotik != null)
                {
                    <span class="badge @(mikrotik.IsEnabled ? "bg-success" : "bg-secondary")">
                        @(mikrotik.IsEnabled ? "Active" : "Disabled")
                    </span>
                }
            </div>
            <div class="card-body">
                @if (mikrotik != null)
                {
                    <dl class="mb-0 small">
                        <dt>IP Address</dt>
                        <dd>@mikrotik.IpAddress@(mikrotik.Port.HasValue ? $":{mikrotik.Port}" : "")</dd>
                        <dt>Status</dt>
                        <dd>
                            <span class="badge @(mikrotik.ConnectionStatus == "connected" ? "bg-success" : "bg-warning")">
                                @(mikrotik.ConnectionStatus ?? "Unknown")
                            </span>
                        </dd>
                    </dl>
                }
                else
                {
                    <p class="text-muted small mb-0">Not configured</p>
                }
            </div>
            <div class="card-footer bg-white">
                @if (mikrotik != null)
                {
                    <div class="btn-group w-100" role="group">
                        <a href="/Admin/Settings/ConfigureMikrotik" class="btn btn-sm btn-outline-primary">
                            <i class="bi bi-gear me-1"></i>Configure
                        </a>
                        <form action="/Admin/Settings/ToggleController/@mikrotik.Id" method="post" style="display:inline;">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-sm @(mikrotik.IsEnabled ? "btn-outline-warning" : "btn-outline-success")">
                                <i class="bi @(mikrotik.IsEnabled ? "bi-pause" : "bi-play") me-1"></i>
                                @(mikrotik.IsEnabled ? "Disable" : "Enable")
                            </button>
                        </form>
                    </div>
                }
                else
                {
                    <a href="/Admin/Settings/ConfigureMikrotik" class="btn btn-sm btn-primary w-100">
                        <i class="bi bi-plus-lg me-1"></i>Add MikroTik
                    </a>
                }
            </div>
        </div>
    </div>

    <!-- Ruckus ZoneDirector -->
    <div class="col-md-6 col-lg-3">
        <div class="card h-100 @(ruckusZd?.IsEnabled == true ? "border-success" : "")">
