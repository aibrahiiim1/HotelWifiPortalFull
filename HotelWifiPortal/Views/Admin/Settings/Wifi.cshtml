                        <dt>Status</dt>
                        <dd>
                            <span class="badge @(ruckusZd.ConnectionStatus == "connected" ? "bg-success" : "bg-warning")">
                                @(ruckusZd.ConnectionStatus ?? "Unknown")
                            </span>
                        </dd>
                    </dl>
                }
                else
