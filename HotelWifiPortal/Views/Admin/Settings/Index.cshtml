@model HotelWifiPortal.Models.ViewModels.SystemSettingsViewModel
@{
    ViewData["Title"] = "General Settings";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="bi bi-gear me-2"></i>General Settings</h2>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show">
        <i class="bi bi-check-circle me-2"></i>@TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show">
        <i class="bi bi-exclamation-triangle me-2"></i>@TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<form asp-action="Index" method="post">
    <div class="row">
        <div class="col-lg-6">
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-building me-2"></i>Hotel Information</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label class="form-label">Hotel Name</label>
                        <input type="text" class="form-control" name="HotelName" value="@Model.HotelName" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Logo URL</label>
                        <input type="text" class="form-control" name="LogoUrl" value="@Model.LogoUrl" placeholder="/images/logo.png" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Welcome Message</label>
                        <textarea class="form-control" name="WelcomeMessage" rows="3">@Model.WelcomeMessage</textarea>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Support Email</label>
                        <input type="email" class="form-control" name="SupportEmail" value="@Model.SupportEmail" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Support Phone</label>
                        <input type="text" class="form-control" name="SupportPhone" value="@Model.SupportPhone" />
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-6">
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-toggles me-2"></i>Features</h5>
                </div>
                <div class="card-body">
                    <!-- Hidden fields to ensure false is sent when checkbox is unchecked -->
                    <input type="hidden" name="RequirePasswordResetOnFirstLogin" value="false" />
                    <div class="form-check form-switch mb-3">
                        <input class="form-check-input" type="checkbox" id="RequirePasswordResetOnFirstLogin" name="RequirePasswordResetOnFirstLogin" value="true" @(Model.RequirePasswordResetOnFirstLogin ? "checked" : "") />
                        <label class="form-check-label" for="RequirePasswordResetOnFirstLogin">
                            <strong>Require WiFi Password on First Login</strong>
                            <br /><small class="text-muted">When enabled, guests must set a new numeric WiFi password on their first login. When disabled, guests can login directly with their reservation number.</small>
                        </label>
                    </div>
                    <hr />
                    
                    <input type="hidden" name="RequireTermsAcceptance" value="false" />
                    <div class="form-check form-switch mb-3">
                        <input class="form-check-input" type="checkbox" id="RequireTermsAcceptance" name="RequireTermsAcceptance" value="true" @(Model.RequireTermsAcceptance ? "checked" : "") />
                        <label class="form-check-label" for="RequireTermsAcceptance">Require Terms & Conditions Acceptance</label>
                    </div>
                    
                    <input type="hidden" name="AllowGuestRegistration" value="false" />
                    <div class="form-check form-switch mb-3">
                        <input class="form-check-input" type="checkbox" id="AllowGuestRegistration" name="AllowGuestRegistration" value="true" @(Model.AllowGuestRegistration ? "checked" : "") />
                        <label class="form-check-label" for="AllowGuestRegistration">Allow Guest Self-Registration</label>
                    </div>
                    
                    <input type="hidden" name="EnablePaywall" value="false" />
                    <div class="form-check form-switch mb-3">
                        <input class="form-check-input" type="checkbox" id="EnablePaywall" name="EnablePaywall" value="true" @(Model.EnablePaywall ? "checked" : "") />
                        <label class="form-check-label" for="EnablePaywall">Enable Paywall When Quota Exceeded</label>
                    </div>
                </div>
            </div>
            
            <div class="card mb-4 bg-light">
                <div class="card-body">
                    <p class="mb-2"><i class="bi bi-info-circle me-2"></i><strong>Note:</strong></p>
                    <p class="mb-0 text-muted small">
                        Speed limits, quota, and maximum devices are configured per package in 
                        <a href="/Admin/Packages/FreePackages">Free Packages</a> and 
                        <a href="/Admin/Packages/Paid">Paid Packages</a>.
                    </p>
                </div>
            </div>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0"><i class="bi bi-file-text me-2"></i>Terms & Conditions</h5>
        </div>
        <div class="card-body">
            <textarea class="form-control" name="TermsAndConditions" rows="6">@Model.TermsAndConditions</textarea>
        </div>
    </div>

    <div class="d-flex justify-content-end">
        <button type="submit" class="btn btn-primary">
            <i class="bi bi-check-lg me-2"></i>Save Settings
        </button>
    </div>
</form>
